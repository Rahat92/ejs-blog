<%-include("partials/header");-%>
<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">Posted by:</label>
    <input type="text" class="form-control" id="exampleInputEmail1" name= "name" autofocus="on" aria-describedby="emailHelp" placeholder="Enter Your Name...">
  </div>
  <div class="form-group">
    <label for="inputid">Title</label>
    <input type="text" class="form-control" id="inputid" name="postTitle" placeholder="Title....">
  </div>
  <div class="form-group">
  <label for="area">Post</label>
  <textarea class="form-control" id="area" name="postBody" rows="7"></textarea>
</div>
  <button id="butn" type="submit" class="btn btn-primary">Submit</button>
</form>

<%-include("partials/footer");-%>
